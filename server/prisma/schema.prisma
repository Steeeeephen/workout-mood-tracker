datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

model User {
  id         BigInt   @id @default(autoincrement())
  first_name String
  last_name  String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  entries Entry[]

  @@map("users")
}

model Entry {
  id             BigInt    @id @default(autoincrement())
  user_id        BigInt
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
  entry_type     EntryType
  entry_datetime DateTime
  mood           Int?      @db.SmallInt
  content        String?   @db.Text
  details        Json?

  user User @relation(fields: [user_id], references: [id])

  @@map("entries")
}

enum EntryType {
  PRE_WORKOUT  @map("pre-workout")
  WORKOUT      @map("workout")
  POST_WORKOUT @map("post-workout")
  MISC         @map("misc")
}
